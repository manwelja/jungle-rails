<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email %>!</h4>
  </div>
  <div class="order">
  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Line Item Total</th>
      </tr>
    </thead>
    <tbody>
    <%= @line_items.inspect %>
    <br><br>products
    <%= @products.inspect %>
    <% @products.each do |item| %>
      <%= item[:image] %>
      <%= item[:product_id] %>
      <%= item[:item_price_cents] %>
      <%= item[:description] %>
      <%= item[:quantity] %>
      <%= item[:total_cents] %>
      <%#= item[:product_id][:description] %>#
    <% end %>
      <% @products.each do |item| %>
        <%= render 'order', product: item, quantity: item[:quantity] %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol cart_subtotal_cents / 100.0 %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>
  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
